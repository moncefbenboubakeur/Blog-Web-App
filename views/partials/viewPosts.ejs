<div class="container accordion" id="accordionExample">
  <h1 class="alert alert-primary col-8 mx-auto text-center">Our blog posts</h1>
  <div class="col-8">
    <% if (posts && posts.length > 0) { %> <% posts.forEach((post, index) => {
    %>
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%= index %>">
        <button
          class="accordion-button collapsed"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapse<%= index %>"
          aria-expanded="false"
          aria-controls="collapse<%= index %>"
        >
          <strong><%= post.postName %></strong>
        </button>
      </h2>
      <div
        id="collapse<%= index %>"
        class="accordion-collapse collapse"
        aria-labelledby="heading<%= index %>"
        data-bs-parent="#accordionExample"
      >
        <div class="accordion-body">
          <div class="alert bg-success-subtle mt-3" role="alert">
            <div><strong>Date: </strong><%= post.postDate %></div>
            <strong>Content: </strong><%= post.postContent %>
          </div>
          <!-- Here, you can add any HTML content for the post, including styled text, images, links, etc. -->
        </div>
      </div>
    </div>
    <% }); %> <% } else { %>
    <p class="alert alert-warning" role="alert">
      There are no posts to display.
    </p>
    <% } %>
  </div>
</div>
